{
  "compilerOptions": {
    // "incremental": true,
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES2015", "ES2020", "ES2016", "ES2017"],
    "allowJs": false,
    // "jsx": "preserve",
    "declaration": true,
    "declarationDir": "types",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false
  },
  "include": ["src/**/*"],
  "exclude": ["**/__tests__/*"]
}
